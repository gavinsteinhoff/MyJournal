@using MyJournal.Views.Manage
@inject SignInManager<ApplicationUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}

<div class="list-group">
    <a class="@ManageNavPages.IndexNavClass(ViewContext) list-group-item list-group-item-action list-group-item-info" asp-action="Index">
        Profile
    </a>
    <a class="@ManageNavPages.ChangePasswordNavClass(ViewContext) list-group-item list-group-item-action list-group-item-info" asp-action="ChangePassword">
        Password
    </a>
    @if (hasExternalLogins)
    {
        <a class="@ManageNavPages.ExternalLoginsNavClass(ViewContext) list-group-item list-group-item-action list-group-item-info" asp-action="ExternalLogins">External logins</a>
    }
</div>
